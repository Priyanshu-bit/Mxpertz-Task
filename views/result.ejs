<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Allocated Students</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        h1 {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 10px 0;
        }

        table {
            width: 80%;
            margin: 20px auto;
            background-color: #fff;
            border-collapse: collapse;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        th, td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #333;
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:nth-child(odd) {
            background-color: #e6e6e6;
        }

        a {
            display: block;
            text-align: center;
            background-color: #333;
            margin-left: 40%;
            margin-right: 40%;
            color: #fff;
            padding: 10px;
            text-decoration: none;
        }

        a:hover {
            background-color: #555;
        }
    </style>
</head>
<body>
    <h1>Allocated Students</h1>
    <table>
        <thead>
            <tr>
                <th>Interview</th>
                <th>Position</th>
                <th>Student</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% allocatedStudents.forEach(function(allocatedStudent) { %>
                <tr>
                    <td><%= allocatedStudent.interview.companyName %></td>
                    <td><%= allocatedStudent.interview.position %></td>
                    <td><%= allocatedStudent.student.name %></td>
                    <td><%= allocatedStudent.status %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <a href="/allocate-student"><strong>Allocate More Students</strong> </a>
</body>
</html>
