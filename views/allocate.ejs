<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Allocate Student</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #0073e6, #3a50e2);
            color: #fff;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
        }

        form {
            background: rgba(45, 39, 39, 0.8);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            width: 500px;
           
            margin: 0 auto;
        }

        h2 {
            color: #0073e6;
        }

        label {
            display: block;
            margin-top: 10px;
            text-align: left;
        }

        select, button {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button {
            background-color: #0073e6;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <form method="POST">
        <h2>Allocate Student</h2>
        <label for="interview">Select Interview:</label>
        <select name="interview" required>
            <% interviews.forEach(function(interview) { %>
                <option value="<%= interview._id %>"><%= interview.companyName %> - <%= interview.position %></option>
            <% }); %>
        </select>

        <label for="student">Select Student:</label>
        <select name="studentName" required>
            <% students.forEach(function(student) { %>
                <option value="<%= student._id %>"><%= student.name %></option>
            <% }); %>
        </select>

        <label for="status">Status:</label>
        <select name="status" required>
            <option value="Pass">Pass</option>
            <option value="Fail">Fail</option>
            <option value="Pending">Pending</option>
        </select>

        <button type="submit">Allocate Student</button>
    </form>
</body>
</html>
